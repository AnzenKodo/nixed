#/usr/bin/env bash


# Advance option for UNIX tools
alias cp="cp -ivr"
alias mv="mv -ivp"
alias bash="bash -o vi"
alias cal="cal -y"
alias grep="grep -i"
alias ls="ls -A --color=always"
alias mkdir="mkdir -v"
# `tree` with the help of `sed`
alias tree="find . | sed -e 's/[^-][^\/]*\// |/g' -e 's/|\([^ ]\)/|-\1/'"

# Start Qtile from startx
alias startq="startx /usr/bin/env qtile start -c ~/.config/nixed/qtile/config.py"
# Move trash in Trash bin instead of deleting it forever
alias rm="trash-put"
# Show image in kitty terminal
alias icat="kitty +kitten icat"

# Edit files
alias note="nvim ~/Documents/notes/README.md"
alias todo="nvim ~/Documents/notes/Todo.md"
